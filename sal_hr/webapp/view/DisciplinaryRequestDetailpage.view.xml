<mvc:View controllerName="com.sal.salhr.controller.DisciplinaryRequestDetailpage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form" height="100%">
    <f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true" stickySubheaderProvider="iconTabBar" class="sapUiNoContentPadding">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title id="idPageTitle" text="{LocalViewModel>/PageTitle}"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs id="idBreadcrumbs" currentLocationText="Request {headerModel>/ticketCode}">
                        <Link id="idHumanResourceLink" text="{LocalViewModel>/PageTitle}" press="handleClose"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:expandedContent>
                    <Label text="Request {headerModel>/ticketCode}"/>
                </f:expandedContent>

                <!--Modify and Withdraw not be visible for Manager Tile -->
                <f:actions>
                    <!-- <Button text="Modify" type="Emphasized" press="onEditPress" visible="{= ${LocalViewModel>/EditMode} === false &amp;&amp; ${EmpInfoModel>/IsUserManager} === false ? true : false }"/> -->
                <HBox   visible="{= ${headerModel>/status} === 'PENDING' ? false : ${headerModel>/status} === 'APPROVED' ? true : ${headerModel>/status} === 'CANCELLED' ? true: ${headerModel>/status} === 'REJECTED' ? true : false }"  >
                   <Button text="Modify" type="Emphasized" press="onEditPress" visible="{= ${LocalViewModel>/EditMode} === false &amp;&amp; ${EmpInfoModel>/IsUserManager} === false ? true : false }"/>
                </HBox>
                    <Button text="Withdraw" type="Emphasized" press="onWithdrawPress" visible="{= ${LocalViewModel>/EditMode} === false &amp;&amp; ${EmpInfoModel>/IsUserManager} === false ? true : false }"/>
                </f:actions>

                <!--Approve and Reject visible for Manager Tile -->
                <f:actions>
                    <Button text="Approve" icon="sap-icon://accept" type="Accept" press="onApprovePress" visible="{parts: [{path: 'headerModel>/status'}, {path:'headerModel>/workflowRequestId'}], formatter: '.formatter.setApproveRejectManagerActionVisibility'}"/>
                    <Button text="Reject" icon="sap-icon://decline" type="Reject" press="onRejectPress" visible="{parts: [{path: 'headerModel>/status'}, {path:'headerModel>/workflowRequestId'}], formatter: '.formatter.setApproveRejectManagerActionVisibility'}"/>
                </f:actions>

                <f:navigationActions>
                    <!-- <Button icon="sap-icon://full-screen" press="onToggelFullScreenMode" type="Transparent" /> -->
                    <Button id="idFullScreenBTN" icon="sap-icon://full-screen" press="handleFullScreen" type="Transparent" />
                    <Button icon="sap-icon://decline" type="Transparent" press="handleClose" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header Content -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute title="{i18n>Status}"/>
                        <!-- <ObjectStatus text="{headerModel>/status}" state="Success"/> -->
                        <ObjectStatus text="{path:'headerModel>/status',formatter:'.formatter.ticketStatusText'}" state="{path:'headerModel>/status',formatter:'.formatter.ticketStatus'}" />
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute title="{i18n>Requested by}"/>
                        <ObjectAttribute text="{externalCodeNav/firstName} {externalCodeNav/middleName} {externalCodeNav/lastName} ({headerModel>/employeeId})"/>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout>
                        <ObjectAttribute title="{i18n>DueBy Date}"/>
                        <ObjectAttribute text="{path:'headerModel>/modifiedAt',
                                                type: 'sap.ui.model.type.Date',
                                                
                                                    formatOptions: {
                                                    pattern: 'MM/dd/yyyy'
                                                     }
                                                
                                                }"/>
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <VBox id="idContentVBox" width="100%">
                <IconTabBar id="idLeaveiconTabBar">
                    <items>
                        <IconTabFilter id="idLeaveDisplayDetailsITB" text="{i18n>Details}" visible="{= ${LocalViewModel>/EditMode} === true ? false : true }">
                            <core:Fragment fragmentName="com.sal.salhr.Fragments.DisciplinaryModule.DisplayDisciplinaryRequest" type="XML"/>
                        </IconTabFilter>
                        <IconTabFilter id="idLeaveEditDetailsITB" text="{i18n>Details}" visible="{= ${LocalViewModel>/EditMode} === true ? true : false }">
                            <core:Fragment fragmentName="com.sal.salhr.Fragments.DisciplinaryModule.EditDisciplinaryRequest" type="XML"/>
                        </IconTabFilter>
                        <!-- <IconTabFilter text="{i18n>Resolution}">
                            <Text text="" />
                        </IconTabFilter> -->
                     <IconTabFilter text="{i18n>History}">
                            <!-- <Text text="" /> -->
                             <core:Fragment fragmentName="com.sal.salhr.Fragments.DisciplinaryModule.HistoryTab" type="XML"/>
                        </IconTabFilter>
                    </items>
                </IconTabBar>




            </VBox>
        </f:content>
        <f:footer>
            <OverflowToolbar id="idOverflowToolbar" visible="{= ${LocalViewModel>/EditMode} === true ? true : false }">
                <ToolbarSpacer id="idToolbarSpacer"/>
                <Button id="idSaveBTN" text="{i18n>Save}" type="Emphasized" press="onSavePress"/>
                <Button id="idCancelBTN" text="{i18n>Cancel}" type="Ghost" press="onCancelPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>